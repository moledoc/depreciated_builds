{
	"languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp"
            ],
            "rootPatterns": [
                ".ccls",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                }
            }
        }
    },
	"markdownlint.config":
	{
	  "default": true
	},

	"coc.preferences.formatOnSaveFiletypes": [
		"css",
		"markdown",
		"Markdown"
	]

}
